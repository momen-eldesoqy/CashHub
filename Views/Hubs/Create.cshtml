@model CashHub.Models.Hub

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-xxl-6">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">إنشاء شركة جديد</h4>
            </div><!-- end card header -->

            <div class="card-body">
                <div class="live-preview">
                    <form asp-action="Create" class="row g-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-md-12">
                            <label asp-for="HunRefNum" for="fullnameInput" class="form-label"></label>
                            <input asp-for="HunRefNum" type="text" class="form-control" id="fullnameInput">

                        </div>
                        <div class="col-md-6">
                            <label asp-for="HubName" for="inputEmail4" class="form-label"></label>
                            <input asp-for="HubName" type="text" class="form-control" id="inputEmail4">
                            <span asp-validation-for="HubName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="HubAddress" for="inputAddress" class="form-label"></label>
                            <input asp-for="HubAddress" type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
                        </div>
                        <div class="col-12">
                            <label asp-for="Phone" for="inputAddress" class="form-label"></label>
                            <input asp-for="Phone" type="text" class="form-control" id="inputAddress" placeholder="010***156***">
                        </div>
                        <div class="col-12">
                            <div class="text-end">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div> <!-- end col -->
</div><!--end row-->

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
